<Window x:Class="BookManagement_HoangNgocTrinh.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookManagement_HoangNgocTrinh"
        mc:Ignorable="d"
        Title="Menu" Height="400" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#f0f4f8">
    <Grid>
        <Button x:Name="ManageAccountButton" Content="Manage Account" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="60" Margin="50,50,0,0" Click="ManageAccountButton_Click" Background="#3498db" Foreground="White" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="ManageBookButton" Content="Manage Book" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="60" Margin="50,150,0,0" Click="ManageBookButton_Click" Background="#2ecc71" Foreground="White" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="Logout" Content="Logout" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Height="43" Margin="393,258,0,0" Click="LogoutButton_Click" Background="#e74c3c" Foreground="White" FontSize="16" FontWeight="Bold"/>
    </Grid>
</Window>
